layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
    }
    tab name="Code" focus=true {
        pane borderless=true {
            command "nvim"
        }
    }
    tab name="Runtime" {
        pane {
            command "mix"
            args "dev"
        }
    }
}
session_name "Kastly"
attach_to_session true
pane_frames true

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:~/.config/zellij/plugins/zellij-bar.wasm"
        }
    }
    tab name="Code" focus=true {
        pane borderless=true {
            command "nvim"
        }
    }
    tab name="Runtime" {
        pane {
            command "yarn"
            args "dev"
        }
    }
}
session_name "WiGraph"
attach_to_session true
pane_frames true

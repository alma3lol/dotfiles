#!/bin/bash

status=$(nmcli d | grep -E "wl*" | awk '{print $3}')
essid=$(nmcli d | grep -E "wl*" | awk '{$1=$2=$3="";print $0}')

if [[ $status == "disconnected" || $status == "unavailable" ]] ; then
    icon=""
    text=""
    col="#575268"
    if [[ $status == "unavailable" ]]; then
        text="Wifi is disabled"
    fi;
else
    icon=""
    text="${essid}"
    col="#a1bdce"
fi



if [[ "$1" == "--COL" ]]; then
    echo $col	
elif [[ "$1" == "--ESSID" ]]; then
	echo $text
elif [[ "$1" == "--ICON" ]]; then
	echo $icon
fi
